<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirmarnum">

    <TextView
        android:id="@+id/textView"
        android:layout_width="347dp"
        android:layout_height="249dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|top"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="@string/ingresa_los_6_digitos_del_codigo_de_verificacion_que_se_envio_por_SMS_a_tu_numero"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134"
        tools:ignore="TextSizeCheck" />


    <EditText
        android:id="@+id/textoConfirmarNum"
        android:layout_width="37dp"
        android:layout_height="43dp"
        android:background="@drawable/boton_redondo"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/textoConfirmarNum6"
